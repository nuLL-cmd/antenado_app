<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.graphics.Color"/>
        <variable
            name="episodesEntity"
            type="com.automatodev.antenado.models.EpisodesEntity" />

        <variable

            name="color"
            type="android.graphics.Color" />



    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardItens_layout"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relativeContent_layout"
                android:background="@color/onPrimary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp">

                <View
                    android:id="@+id/viewSupport_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text='@{episodesEntity.name}'
                    android:layout_toStartOf="@id/txtDate_layouEpisode"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_alignTop="@id/txtDate_layouEpisode"
                    android:layout_alignBottom="@id/txtDate_layouEpisode"
                    android:gravity="center|start"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:id="@+id/txtTitle_layouEpisode"
                    android:layout_toLeftOf="@id/txtDate_layouEpisode" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{episodesEntity.airDate}'
                    android:layout_alignParentEnd="true"
                    android:textColor="#FFC107"
                    android:layout_alignTop="@id/viewSupport_layout"
                    android:layout_alignBottom="@id/viewSupport_layout"
                    android:gravity="center|end"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:textSize="@dimen/_8ssp"
                    android:id="@+id/txtDate_layouEpisode"
                    android:layout_alignParentRight="true" />

                <View
                    android:id="@+id/viewBack_layout"
                    android:background="@drawable/bg_item_card_view"
                    android:layout_width="match_parent"
                    android:layout_below="@id/viewSupport_layout"
                    android:layout_height="match_parent" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgItem_layout"
                    android:layout_width="@dimen/_30sdp"
                    android:src = "@drawable/ic_tv"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_below="@id/viewSupport_layout"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="@dimen/_4sdp" />

                <TextView
                    android:id="@+id/lblEpisode_layoutEpisode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episodio:"
                    android:textColor="@color/colorTextPrimary"
                    android:layout_toEndOf="@id/imgItem_layout"
                    android:layout_toRightOf="@id/imgItem_layout"
                    android:layout_alignTop="@id/imgItem_layout"
                    android:layout_alignBottom="@id/imgItem_layout"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"/>

                <TextView
                    android:id="@+id/txtEpisode_layoutEpisode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{String.valueOf(episodesEntity.episode)}'
                    android:textColor="#FF5722"
                    android:layout_toEndOf="@id/lblEpisode_layoutEpisode"
                    android:layout_toRightOf="@id/lblEpisode_layoutEpisode"
                    android:layout_alignTop="@id/lblEpisode_layoutEpisode"
                    android:layout_alignBottom="@id/lblEpisode_layoutEpisode"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    />
                <TextView
                    android:id="@+id/lblSeason_layoutEpisode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temporada: "
                    android:textColor="@color/colorTextPrimary"
                    android:layout_toStartOf="@id/txtSeason_layoutEpisode"
                    android:layout_alignTop="@id/txtEpisode_layoutEpisode"
                    android:layout_alignBottom="@id/txtEpisode_layoutEpisode"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/txtSeason_layoutEpisode" />

                <TextView
                    android:id="@+id/txtSeason_layoutEpisode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text='@{String.valueOf(episodesEntity.season)}'
                    android:textColor="#4CAF50"
                    android:layout_alignTop="@id/lblSeason_layoutEpisode"
                    android:layout_alignBottom="@id/lblSeason_layoutEpisode"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_alignParentRight="true" />


            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>